<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.popups.AdminFlightPopupController"
      styleClass="container" alignment="CENTER" style="-fx-padding: 10">
    <stylesheets>
        <URL value="@/styles/style.css"/>
        <URL value="@/styles/popup.css"/>
    </stylesheets>
    <GridPane>

    </GridPane>
    <HBox spacing="10" alignment="CENTER">
        <RadioButton fx:id="arrivalRadioButton" text="Arrival" />
        <RadioButton fx:id="departureRadioButton" text="Departure" />
    </HBox>

    <HBox spacing="5">
        <VBox spacing="5">
            <Label text="Select an hour:" />
            <Spinner fx:id="hourSpinner" min="0" max="23" initialValue="0" />
        </VBox>
        <VBox spacing="5">
            <Label text="Select minutes:" />
            <Spinner fx:id="minutesSpinner" min="0" max="59" initialValue="0" />
        </VBox>
    </HBox>

    <VBox spacing="5" alignment="CENTER">
        <Label text="Select a delay amount (minutes):" />
        <Spinner fx:id="delaySpinner" min="0" max="59" initialValue="0" />
    </VBox>

    <VBox alignment="CENTER" spacing="5">
        <Label text="Select city:"/>
        <ComboBox fx:id="cityComboBox"/>
    </VBox>

    <VBox alignment="CENTER" spacing="5">
        <Label text="Select airline:"/>
        <ComboBox fx:id="airlineComboBox"/>
    </VBox>

    <HBox spacing="5" alignment="CENTER">
        <Button styleClass="defaultButton" text="Create" onAction="#onCreateButtonClicked" />
        <Button styleClass="secondaryButton" text="Cancel" onAction="#onCancelButtonClicked" />
    </HBox>

</VBox>
