<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ListView?>
<?import java.net.URL?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.MainViewController">
    <stylesheets>
        <URL value="@/styles/style.css"/>
        <URL value="@/styles/mainView.css"/>
    </stylesheets>
    <GridPane gridLinesVisible="true" minWidth="400">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0"/>
            <ColumnConstraints hgrow="ALWAYS" percentWidth="25.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>
        <Button disable="true" fx:id="simulationButton" styleClass="RoleButton" text="Simulation" GridPane.columnIndex="0"
                GridPane.rowIndex="0"/>
        <Button fx:id="adminButton" styleClass="RoleButton" text="Admin" GridPane.columnIndex="1" GridPane.rowIndex="0"
                maxWidth="Infinity"/>
        <Button fx:id="salesmanButton" styleClass="RoleButton" text="Salesman" GridPane.columnIndex="2"
                GridPane.rowIndex="0"/>
        <Button fx:id="physicalWorkerButton" styleClass="RoleButton" text="Physical Worker" GridPane.columnIndex="3"
                GridPane.rowIndex="0"/>
    </GridPane>
    <BorderPane fx:id="bodyBorderPane">
        <top>
            <HBox fx:id="timeBarHBox" alignment="CENTER">
                <Label fx:id="currentTimeLabel" text="TIME"/>
                <Region minWidth="20"/>
                <Button fx:id="playButton" text="Play" onAction="#handlePlayButtonClick"/>
                <Button fx:id="pauseButton" text="Pause" onAction="#handlePauseButtonClick"/>
                <Button disable="true" fx:id="rerunButton" text="Rerun" onAction="#handleRerunButtonClick"/>
            </HBox>
        </top>
        <center>
            <GridPane gridLinesVisible="true" minHeight="200">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="33.0"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="33.0"/>
                    <ColumnConstraints hgrow="ALWAYS" percentWidth="34.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>
                <VBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="DEPARTURES:"/>
                    <ListView fx:id="departuresList"/>
                </VBox>
                <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="ARRIVALS:"/>
                    <ListView fx:id="arrivalsList"/>
                </VBox>
                <VBox GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <VBox>
                        <Label text="Admin Activity:"/>
                        <ListView fx:id="adminLogsList"/>
                    </VBox>
                    <VBox>
                        <Label text="Salesman Activity:"/>
                        <ListView fx:id="salesmanLogsList"/>
                    </VBox>
                    <VBox>
                        <Label text="Physical Worker Activity:"/>
                        <ListView fx:id="physicalWorkerLogsList"/>
                    </VBox>
                </VBox>
            </GridPane>
        </center>
        <bottom>
            <VBox minHeight="150">
                <Label text="Simulation Activity:"/>
                <ListView fx:id="simulationLogsList"/>
            </VBox>
        </bottom>
    </BorderPane>
</VBox>