<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<VBox VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SimulationViewController">
    <stylesheets>
        <URL value="@/styles/style.css"/>
    </stylesheets>
    <HBox fx:id="timeBarHBox" alignment="CENTER">
        <Label fx:id="currentTimeLabel" text="TIME"/>
        <Region minWidth="20"/>
        <Button fx:id="playButton" text="Play" onAction="#handlePlayButtonClick"/>
        <Button disable="true" fx:id="pauseButton" text="Pause" onAction="#handlePauseButtonClick"/>
        <Button disable="true" fx:id="rerunButton" text="Rerun" onAction="#handleRerunButtonClick"/>
        <Button fx:id="settingsButton" text="Settings" onAction="#handleSettingsButtonClick"/>
    </HBox>
    <GridPane VBox.vgrow="ALWAYS" minHeight="200" gridLinesVisible="true">
        <columnConstraints>
            <ColumnConstraints minWidth="250"/>
            <ColumnConstraints minWidth="250"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="400"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints vgrow="ALWAYS"/>
        </rowConstraints>
        <VBox styleClass="monospacedText" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="DEPARTURES:"/>
            <ListView VBox.vgrow="ALWAYS" fx:id="departuresList"/>
        </VBox>
        <VBox styleClass="monospacedText" alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="ARRIVALS:"/>
            <ListView VBox.vgrow="ALWAYS" fx:id="arrivalsList"/>
        </VBox>
        <VBox GridPane.columnIndex="2" GridPane.rowIndex="0">
            <VBox>
                <Label text="Admin Activity:"/>
                <ListView VBox.vgrow="ALWAYS" fx:id="adminLogsList"/>
            </VBox>
            <VBox>
                <Label text="Salesman Activity:"/>
                <ListView VBox.vgrow="ALWAYS" fx:id="salesmanLogsList"/>
            </VBox>
            <VBox>
                <Label text="Physical Worker Activity:"/>
                <ListView VBox.vgrow="ALWAYS" fx:id="workmanLogsList"/>
            </VBox>
        </VBox>
    </GridPane>
    <HBox minHeight="190">
        <VBox prefWidth="250">
            <Label text="Weather:"/>
            <TableView fx:id="weatherTableView">
                <columnResizePolicy>
                    <TableView fx:constant = "CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn text="Property">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="property"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Value">
                        <cellValueFactory>
                            <javafx.scene.control.cell.PropertyValueFactory property="value"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
        <VBox VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" fx:id="BottomVBox">
            <Label text="Simulation Activity:"/>
            <ListView VBox.vgrow="ALWAYS" fx:id="simulationLogsList"/>
        </VBox>
    </HBox>
</VBox>
